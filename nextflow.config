 profiles{
    slurm{
        process.executor = 'slurm'
        singularity.enabled = true
        singularity.cacheDir = "${projectDir}/../../.tmp/singularity-images/"
        queueSize = 50
        submitRateLimit = '1 sec'
    }
    uppmax_inter{
        process.executor = 'local'
        singularity.enabled = true
        singularity.cacheDir = "${projectDir}/../../.tmp/singularity-images/"
        queueSize = 100
        submitRateLimit = '0.1 sec'
    }

    local{
        process.executor = 'local'
        singularity.enabled = false
        singularity.cacheDir = "${projectDir}/../../.tmp/singularity-images/"
        queueSize = 10
    }
  
 }

